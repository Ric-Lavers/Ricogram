.user-profile{
  margin-top: 134px;
}

.profile-info{
  max-width: 935px;
  height: 152px;
  margin-bottom: 44px;
  display: flex;
  align-items:stretch;
  max-width: 935px;
  display: grid;
  grid-template-columns: 1fr 2fr;

  .display-picture{
    max-width: 150px;
    margin:0 auto;

  }
  .dp-large{
    width:152px;
    height: 152px;
    border: 1px solid rgba(0,0,0,0.1);
    object-fit: cover;
    border-radius: 100%;
  }
  .name{
    font-size: 28px;
    padding:12px;
  }
  .edit-profile{
    font-size: 0.8em;
  }
  .user-details{
    width: 100%;
    text-align: left;
    // border: 1px solid red;
  }
  .bio{
    padding:20px;
  }
  .name{

    margin-left: 0;
    max-width: 218px;
    max-width: 50%;
    display: flex;
    align-items:flex-start;
  }
  .stats{
    display: flex;
    align-items: flex-start;
    margin-left: 20px;
    width: 60%;
    font-size: 1.2em;
    .num-post,.num-followers,
  .num-following{
      margin-left: 0;
    }

  }

}
$gapDesktop : 24px;

.photo-grid{
  // margin-left: -20px;
  max-width: 935px;
  display: grid;
  grid-gap:$gapDesktop;
  grid-template-columns: 1fr 1fr 1fr;
}
.profile-images{
  object-fit: cover;
  vertical-align: top;
  width:100%;
  height: 100%;

}
.profile-images-overlay{
  position: relative;
  width: 294px;
  height:294px;
}
.profile-images-overlay:after {
    content: '\A';
    position: absolute;
    width: 100%; height:100%;
    top:0; left:0;
    background:rgba(0,0,0,0.25);
    opacity: 0;
}
.profile-images-overlay:hover:after {
  opacity: 1;
}
.profile-images-overlay:hover{
  background-color: rgba(#3F3F3F,0.3);
}

@media (max-width: 986px) {
  .profile-images{
    max-width: 294px;
    max-height:294px;
  }
}
