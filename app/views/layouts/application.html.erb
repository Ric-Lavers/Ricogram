<!DOCTYPE html>
<html>
  <head>
    <title>InstaRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <div class="banner">
<%= link_to root_path, class: "home" do%>
      <div class="logos">

        <div class="camera"></div>

        <div class="line"></div>
        <div class="ricagram">Rictagram</div>
      </div>
<%end%>
      <%= link_to 'Add Photo', new_photo_path %>
      <%#= link_to 'Create Profile', new_profile_path %>

      <div class="dropdown">
        <h4 class="menu">SETTINGS</h4>
        <div class="drop"><p>
          <% if @current_user != nil %>
             <%=@current_user.email.split("@")[0][0..16]%>
          <% end %>
         </p>
        </div>

      <% if user_signed_in? %>

          <div class="dropdown-content">
          <%= button_to('Logout', destroy_user_session_path, method: :delete , form_class: "login_out") %>
          <%= button_to('My Profile',user_path(current_user.id),method: :get ,form_class: "login_out")%>

          <%=link_to 'Password', edit_user_registration_path, class: "login_out"%>

          </div>
          <!-- <div class="dropdown-content">

          </div> -->


        <% else %>
          <div class="dropdown-content">
          <%= button_to('Login', new_user_session_path, form_class: "login_out")  %>
          </div>
        <% end %>
      </div>

    </div>
    <div class="container">

      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </body>
</html>
